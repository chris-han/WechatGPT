{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "wechatbot:v0.9",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"FLASK_APP": "main.py",
					"FLASK_DEBUG": "1",
				},
				"volumes": [
				  {
					"containerPath": "/app", "localPath": "${workspaceFolder}"
				  }
				]
			},
			"python": {
				"args": [
					"run",
					//"--no-debugger",
					//"--no-reload",
					"--host",
					"0.0.0.0",
					"--port",
					"5000"
				],
				"module": "flask"
			}
		}
	]
}